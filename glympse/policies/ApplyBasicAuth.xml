<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<BasicAuthentication async="false" continueOnError="false" enabled="true" name="ApplyBasicAuth">
   <DisplayName>ApplyBasicAuth</DisplayName>
   <Operation>Encode</Operation>
   <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
   <User ref="application.key" />
   <Password ref="application.secret" />
   <AssignTo createNew="false">request.header.Authorization</AssignTo>
</BasicAuthentication>


